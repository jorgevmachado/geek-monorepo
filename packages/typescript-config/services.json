{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "services",
  "compileOnSave": false,
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [ "es2018",  "dom" ],
    "outDir": "./dist",
    "types": [ "node" ],
    "target": "esnext",
    "module": "ESNext",
    "baseUrl": "./",
    "rootDirs": [ "./dist" ],
    "moduleResolution": "Bundler",
    "strict": false,
    "sourceMap": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/__mocks__",
    "**/tests",
    "**/*.spec.tsx",
    "**/*.spec.ts"
  ]
}
